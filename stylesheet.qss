/* ==================== TABS ==================== */
QTabWidget::pane {
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 10px;
    background: rgba(40, 40, 80, 0.5);
    backdrop-filter: blur(6px);
}

QTabBar::tab {
    background: rgba(50, 50, 90, 0.7);
    color: #B0BEC5;
    padding: 10px 20px;
    margin: 2px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    min-width: 100px;
    font-weight: 500;
    transition: all 0.3s ease;
}

QTabBar::tab:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                               stop: 0 #64B5F6, stop: 1 #2196F3);
    color: #FFFFFF;
    border-bottom: 3px solid #4FC3F7;
    animation: tabGlow 2s infinite;
}

QTabBar::tab:hover:!selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                               stop: 0 #4FC3F7, stop: 1 #29B6F6);
    color: #E6E6FA;
}

/* ==================== GLASSMORPHISM CONTAINERS ==================== */
QGroupBox {
    background: rgba(30, 30, 60, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 12px;
    margin-top: 20px;
    padding: 10px;
    backdrop-filter: blur(8px);
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 6px 16px;
    background: rgba(40, 40, 80, 0.7);
    color: #B0C4DE;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
}

/* Themed Group Boxes */
QGroupBox#groupBox { /* Energy */
    background: rgba(46, 125, 50, 0.5);
    border: 1px solid rgba(76, 175, 80, 0.4);
}
QGroupBox#GroupBox_system_status { /* System */
    background: rgba(30, 136, 229, 0.5);
    border: 1px solid rgba(100, 181, 246, 0.4);
}
QGroupBox#GroupBox_quick_actions { /* Quick Actions */
    background: rgba(106, 27, 154, 0.5);
    border: 1px solid rgba(186, 104, 200, 0.4);
}

/* ==================== TABLES & LISTS ==================== */
QListView, QTableView, QTableWidget {
    background: rgba(40, 40, 80, 0.5);
    alternate-background-color: rgba(50, 50, 100, 0.4);
    gridline-color: rgba(120, 144, 156, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    color: #E6E6FA;
    selection-background-color: #4FC3F7;
    selection-color: #FFFFFF;
}

QHeaderView::section {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #5C6BC0, stop: 1 #3F51B5);
    color: #E6E6FA;
    padding: 6px;
    border: 1px solid rgba(120, 144, 156, 0.3);
    font-weight: 600;
}

/* ==================== SCROLLBARS ==================== */
QScrollBar:vertical {
    background: rgba(40, 40, 80, 0.5);
    width: 10px;
    margin: 0;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: rgba(100, 181, 246, 0.6);
    border-radius: 5px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: rgba(79, 195, 247, 0.8);
}

/* ==================== INPUT FIELDS ==================== */
QLineEdit, QSpinBox, QComboBox {
    background: rgba(50, 50, 100, 0.5);
    border: 1px solid rgba(120, 144, 156, 0.3);
    border-radius: 8px;
    padding: 8px;
    color: #E6E6FA;
    selection-background-color: #4FC3F7;
}

QLineEdit:focus, QSpinBox:focus, QComboBox:focus {
    border: 1px solid #4FC3F7;
    box-shadow: 0 0 8px rgba(79, 195, 247, 0.4);
}

/* ==================== ANIMATIONS ==================== */
@keyframes pulseRed {
    0% { box-shadow: 0 0 0 0 rgba(239, 83, 80, 0.5); }
    70% { box-shadow: 0 0 0 12px rgba(239, 83, 80, 0); }
    100% { box-shadow: 0 0 0 0 rgba(239, 83, 80, 0); }
}

@keyframes tabGlow {
    0%, 100% { box-shadow: 0 0 5px rgba(79, 195, 247, 0.5); }
    50% { box-shadow: 0 0 12px rgba(79, 195, 247, 0.8); }
}
