/* Queue, Redo, Undo, Clear All Queue */
QPushButton#pushButton_Queue:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #64B5F6, stop: 1 #2196F3);
}

QPushButton#pushButton_Redo, QPushButton#pushButton_Undo {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #5C6BC0, stop: 1 #3F51B5);
}

QPushButton#pushButton_Redo:hover, QPushButton#pushButton_Undo:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFB74D, stop: 1 #F57C00);
}

QPushButton#pushButton_ClearAllQueue:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #E57373, stop: 1 #F44336);
}

/* Add Device, Remove Selected Device */
QPushButton#pushButton_AddDevice {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #66BB6A, stop: 1 #388E3C);
}

QPushButton#pushButton_AddDevice:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #81C784, stop: 1 #4CAF50);
}

QPushButton#pushButton_RemoveSelectedDevice {
