QPushButton#pushButton_SleepMode:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #5E35B1, stop: 1 #4527A0);
}

QPushButton#pushButton_SleepMode:checked {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #5E35B1, stop: 1 #4527A0);
