/* ==================== GLOBAL STYLES ==================== */
* {
    font-family: 'Inter', 'Roboto', 'Segoe UI', sans-serif;
    color: #E6E6FA; /* Light lavender text for readability */
    font-size: 14px;
}

/* Main window with gradient background */
QMainWindow, QDialog, QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1C2526, stop: 1 #0A3D62);
}

/* ==================== LABELS ==================== */
QLabel {
    background: transparent; /* Fully transparent for clean integration */
    padding: 3px;
    transition: color 0.3s ease;
}

QLabel[objectName^="Fetched_"] {
    font-weight: bold;
    color: #82b1ff; /* Light blue for fetched data */
    font-size: 12pt;
    text-shadow: 0 2px 4px rgba(130, 177, 255, 0.3);
}

QLabel#label, QLabel#label_3, QLabel#label_2 {
    background: transparent;
    color: #64b5f6; /* Bright blue for main titles */
    font-weight: 800;
    font-size: 28pt;
    text-shadow: 0 4px 8px rgba(100, 181, 246, 0.3);
}

/* System Information Titles */
QLabel#label_SystemVersion, QLabel#label_LastUpdate, QLabel#label_SystemUptime,
QLabel#label_MemoryUsage, QLabel#label_DatabaseSize {
    font-size: 16px;
    font-weight: 700;
    color: #B0C4DE; /* Steel blue for better visibility */
    text-shadow: 0 2px 4px rgba(79, 195, 247, 0.2);
    padding: 5px;
}

/* Unit Labels - Enhanced to complement System Information titles */
QLabel#label_UnitOfMemoryUsage, QLabel#label_UnitOfLastUpdate, QLabel#label_UnitOfDatabaseSize {
    font-size: 16px;
    font-weight: 700;
    color: #82b1ff; /* Light blue-gray to complement titles */
    text-shadow: 0 1px 3px rgba(79, 195, 247, 0.15);
    padding: 6px;
    background: rgba(40, 40, 80, 0.3); /* Subtle glassmorphism */
    border-radius: 4px;
}

/* ==================== BUTTONS (QPushButton) ==================== */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #5C6BC0, stop: 1 #3F51B5); /* Indigo gradient */
    border: 1px solid #7986CB;
    border-radius: 10px;
    padding: 12px 24px;
    font-size: 13px;
    font-weight: 600;
    color: #FFFFFF;
    min-height: 36px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #7986CB, stop: 1 #5C6BC0);
    border: 1px solid #9FA8DA;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(121, 134, 203, 0.3);
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #3F51B5, stop: 1 #2D3E50);
    transform: translateY(0);
    box-shadow: 0 2px 6px rgba(121, 134, 203, 0.2);
}

/* View All Commands Button */
QPushButton#pushButton_5:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #64B5F6, stop: 1 #2196F3);
}

/* ON/OFF Buttons - Neutral base, green/red only on hover */
QPushButton[objectName*="On"], QPushButton[objectName*="Off"] {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #5C6BC0, stop: 1 #3F51B5);
}

QPushButton[objectName*="On"]:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #81C784, stop: 1 #4CAF50);
    box-shadow: 0 6px 12px rgba(129, 199, 132, 0.4);
}

QPushButton[objectName*="Off"]:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #E57373, stop: 1 #F44336);
    box-shadow: 0 6px 12px rgba(229, 115, 115, 0.4);
}

/* Device On/Off Buttons */
QPushButton#pushButton_FirstFloorDeviceOn, QPushButton#pushButton_SecondFloorDeviceOn {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #5C6BC0, stop: 1 #3F51B5);
}

QPushButton#pushButton_FirstFloorDeviceOn:hover, QPushButton#pushButton_SecondFloorDeviceOn:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #81C784, stop: 1 #4CAF50);
}

QPushButton#pushButton_FirstFloorDeviceOff, QPushButton#pushButton_SecondFloorDeviceOff {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #5C6BC0, stop: 1 #3F51B5);
}

QPushButton#pushButton_FirstFloorDeviceOff:hover, QPushButton#pushButton_SecondFloorDeviceOff:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #E57373, stop: 1 #F44336);
}

/* Add Device to Control */
