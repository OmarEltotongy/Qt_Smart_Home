QPushButton#pushButton_leavingHomeMode {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4A4A8A, stop: 1 #2D2D5A);
}
QPushButton#pushButton_leavingHomeMode:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFCA28, stop: 1 #FFB300);
    border: 2px solid #FFE082;
    box-shadow: 0 8px 20px rgba(255, 202, 40, 0.4);
}

QPushButton#pushButton_emergencyShutdownMode {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #EF5350, stop: 1 #D32F2F);
    border: 2px solid #EF9A9A;
    animation: pulseRed 1.5s infinite;
}
QPushButton#pushButton_emergencyShutdownMode:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #E57373, stop: 1 #F44336);
    box-shadow: 0 8px 20px rgba(239, 83, 80, 0.5);
    transform: scale(1.05);
}

QPushButton#pushButton_CinemaMode {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4A4A8A, stop: 1 #2D2D5A);
}
QPushButton#pushButton_CinemaMode:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #AB47BC, stop: 1 #8E24AA);
    border: 2px solid #CE93D8;
    box-shadow: 0 8px 20px rgba(206, 147, 216, 0.4);
