}

QPushButton#pushButton_RemoveSelectedDevice:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #E57373, stop: 1 #F44336);
}

/* House Configurations Buttons */
QPushButton#pushButton_AddNewMode:hover, QPushButton#pushButton_AddNewRoom:hover,
QPushButton#pushButton_AddNewGroup:hover, QPushButton#pushButton_AddNewFloor:hover {
